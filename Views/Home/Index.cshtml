@{
    ViewBag.Title = "Legacy X - Virtual Adding Machine";
}

<div class="container">
    <span class="title">@ViewBag.Title</span>
    <div class="app">
        <div class="tape">
            <ul class="entries"></ul>
        </div>
        <div class="calculator">
            <textarea hidden id="text-download" cols="40" rows="9999"></textarea>
            <input id="newNumber" type="text">
            <div class="inputs">
                <span id="clear-tape">Clear Tape</span>
                <span id="prev-tape">prev</span>
                <span id="save-tape">save</span>
                <span id="clear-entry">CE</span>
                <span id="clear">C</span>
                <span class="calculate" id="percent">%</span>
                <span class="calculate" id="divide">÷</span>
                <span class="digit">7</span>
                <span class="digit">8</span>
                <span class="digit">9</span>
                <span class="calculate" id="subtract">-</span>
                <span class="digit">4</span>
                <span class="digit">5</span>
                <span class="digit">6</span>
                <span class="calculate" id="multiply">×</span>
                <span class="digit">1</span>
                <span class="digit">2</span>
                <span class="digit">3</span>
                <span class="calculate" id="add">+</span>
                <span class="digit">0</span>
                <span id="decimal" class="digit">.</span>
                <span class="calculate" id="total">=</span>
                <span class="calculate" id="plus-minus">±</span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/Calculator.js"></script>
